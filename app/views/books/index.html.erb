<%= form_tag books_path, :method => 'get' do %>
  
  <div class="form-group">
    <%= label_tag("Buscar: ")  %>
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Nombre del libro" %>
    <%= submit_tag "Buscar", :name_book => nil %>
    <HR width="100%">
  </div>
<% end %>

<div>
<% @books.each do |book|%>
<% if book.image.attached? %>
    <%= image_tag(book.image,style: "width: 100px") %>
    <HR width="00%">
<% end %>
<%= link_to(book.name_book,"/books/#{book.id}")%> <br>
<%= book.author %> <br>
<% end %>
</div>
<%= button_to "Agregar Libro", "/books/new", method: :get %>